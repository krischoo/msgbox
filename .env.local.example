# msgbox 로컬 개발 환경 설정
# 사용법: cp .env.local.example .env.local

# 시스템
TZ=Asia/Seoul
PUID=1000
PGID=1000

# App 설정
APP_NAME=MsgBox
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# 로그 설정
LOG_CHANNEL=stack
LOG_LEVEL=debug

# AnonAddy 설정
ANONADDY_DOMAIN=localhost
ANONADDY_HOSTNAME=localhost
ANONADDY_SECRET=local_development_secret_change_me
ANONADDY_ENABLE_REGISTRATION=true
ANONADDY_ADMIN_USERNAME=admin

# 데이터베이스 (docker-compose.local.yml과 일치해야 함)
DB_CONNECTION=mysql
DB_HOST=msgbox-db
DB_PORT=3306
DB_DATABASE=anonaddy
DB_USERNAME=anonaddy
DB_PASSWORD=localpassword

# Redis (docker-compose.local.yml과 일치해야 함)
REDIS_HOST=msgbox-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# 캐시/세션/큐
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# 메일 (로컬에서는 로그로만 확인)
MAIL_MAILER=log
MAIL_FROM_NAME=MsgBox
MAIL_FROM_ADDRESS=noreply@localhost

# 메일 실제 발송하려면 아래 설정 사용:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_mailtrap_username
# MAIL_PASSWORD=your_mailtrap_password
# MAIL_ENCRYPTION=tls

# Postfix (로컬에서는 비활성화)
# POSTFIX_RELAYHOST=
# POSTFIX_RELAYHOST_USERNAME=
# POSTFIX_RELAYHOST_PASSWORD=

# Vite (Mac에서 npm run dev 실행 시)
VITE_APP_URL=http://localhost:8000
